<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateGrocery"
    android:background="@drawable/mart3"
    android:orientation="vertical"
    android:weightSum="18" >

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:fontFamily="@font/benne"
        android:textAllCaps="false"
        android:textSize="45dp"
        android:textColor="#FFFFFF"
        android:text="Gocery Mart"
        android:layout_weight="2">

    </TextView>



    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3">

    </LinearLayout>


    -<androidx.cardview.widget.CardView
    android:background="#5D6D7E"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="10"
    app:cardBackgroundColor="#5D6D7E"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="30dp">


    -<LinearLayout
    android:orientation="vertical"
    android:weightSum="18"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:textAllCaps="false"
        android:textSize="35dp"
        android:textColor="#000000"
        android:text="Update Grocery"
        android:layout_weight="3"
        android:layout_marginLeft="10dp">

    </TextView>


    <Spinner
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:id="@+id/spAdUp">
    </Spinner>


    <EditText
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:background="@drawable/addgroceryroundedbutton"
        android:textColor="#000000"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/etAdUpname"
        android:paddingLeft="20dp"
        android:layout_marginVertical="10dp"
        android:textColorHint="#000000"
        android:hint="Name">

    </EditText>

    <EditText  android:background="@drawable/addgroceryroundedbutton"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/etAdUpprice"
        android:paddingLeft="20dp"
        android:layout_marginVertical="10dp"
        android:textColorHint="#000000"
        android:hint="Price">

    </EditText>



    <EditText
        android:background="@drawable/addgroceryroundedbutton"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/etAdUpstock"
        android:paddingLeft="20dp"
        android:layout_marginVertical="10dp"
        android:textColorHint="#000000"
        android:hint="Stock">


    </EditText>



    <EditText
        android:background="@drawable/addgroceryroundedbutton"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_weight="2"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/etAdUpmeasure"
        android:paddingLeft="20dp"
        android:layout_marginVertical="10dp"
        android:textColorHint="#000000"
        android:hint="Measurement">

    </EditText>




    <Button
        android:background="#000000"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Update Image"
        android:layout_weight="2"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/btAdUpUpimage"
        android:layout_marginVertical="15dp">
    </Button>



    <Button

        android:background="#000000"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="Update Grocery"
        android:layout_weight="2"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/btAdUpUpgrocery"
        android:maxHeight="15dp">

    </Button>



</LinearLayout>

</androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">
    </LinearLayout>


    <ProgressBar
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:id="@+id/pbAdUp"
        android:layout_marginRight="340dp"
        android:layout_marginTop="70dp"
        style="@style/Base.CardView">


    </ProgressBar>

</LinearLayout>
